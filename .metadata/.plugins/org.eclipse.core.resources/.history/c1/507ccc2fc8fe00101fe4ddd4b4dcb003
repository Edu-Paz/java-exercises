package exercicios_recursao;

public class Exercicio2 {

	public double somaArray(double[][] array, int x, int y) {
		if(x >= array.length) {
			return 0;
		}
		
		int proximoX = x;
		int proximoY = y + 1;
		
		if (proximoY >= array[x].length) {
			proximoX = x + 1;
			proximoY = 0;
		}
		
		return array[x][y] + somaArray(array, proximoX, proximoY);
	}
	public static void main(String[] args) {
		Exercicio2 ex = new Exercicio2();
        double[][] dados = {
            {1.5, 2.5},
            {3.0, 4.0}
        };

        double total = ex.somaArray(dados, 0, 0);
        System.out.println("A soma total Ã©: " + total);
	}

}
